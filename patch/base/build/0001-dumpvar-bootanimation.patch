+ifdef CUSTOM_BOOTANIMATION
+print_build_config_vars += \
+  CUSTOM_BOOTANIMATION
+else
+  CUSTOM_BOOTANIMATION := vendor/du/prebuilt/common/media/bootanimation.zip
+endif
+
 ifeq ($(TARGET_BUILD_PDK),true)
 print_build_config_vars += \
   TARGET_BUILD_PDK \
@@ -127,5 +136,6 @@ $(info   HOST_OS_EXTRA=$(HOST_OS_EXTRA))
 $(info   HOST_BUILD_TYPE=$(HOST_BUILD_TYPE))
 $(info   BUILD_ID=$(BUILD_ID))
 $(info   OUT_DIR=$(OUT_DIR))
