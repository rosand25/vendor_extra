diff --git a/core/dumpvar.mk b/core/dumpvar.mk
index 132b499..8309324 100644
--- a/core/dumpvar.mk
+++ b/core/dumpvar.mk
@@ -19,6 +19,15 @@ print_build_config_vars := \
   BUILD_ID \
   OUT_DIR
 
+CUSTOM_BOOTANIMATION := $(strip $(wildcard vendor/extra/prebuilt/$(DU_BUILD)/media/bootanimation.zip))
